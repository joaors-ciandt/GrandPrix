@model IEnumerable<CustomFramework.Security.Membership.Model.Feature>

@{
    ViewBag.Title = "Funcionalidades";
    ViewBag.Header = "Funcionalidades";
    ViewBag.Description = "Pesquisa de funcionalidades disponíveis no sistema.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered table-striped table-highlight">
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Editar", "EditFeature", new { id = item.Id })
                @Html.ActionLink("Excluir", "DeleteFeature", new { id = item.Id }, new { onclick = "return confirm('Tem certeza que deseja excluir esta funcionalidade?');" })
            </td>
        </tr>
    }
    </tbody>
</table>
<p>
    @Html.ActionLink("Nova Funcionalidade", "CreateFeature","Membership", null, new {@class = "btn btn-info"})
</p>
